<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<servlet>
		<servlet-name>BlogContentJsonServlet</servlet-name>
		<servlet-class>com.udacity.webdev.BlogContentJsonServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BlogFrontPageServlet</servlet-name>
		<servlet-class>com.udacity.webdev.BlogFrontPageServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>NewPostServlet</servlet-name>
		<servlet-class>com.udacity.webdev.NewPostServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PermalinkServlet</servlet-name>
		<servlet-class>com.udacity.webdev.PermalinkServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SingupServlet</servlet-name>
		<servlet-class>com.udacity.webdev.SingupServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SinginServlet</servlet-name>
		<servlet-class>com.udacity.webdev.SinginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SingoutServlet</servlet-name>
		<servlet-class>com.udacity.webdev.SingoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>WelcomeServlet</servlet-name>
		<servlet-class>com.udacity.webdev.WelcomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BlogFrontPageServlet</servlet-name>
		<url-pattern>/blog</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BlogContentJsonServlet</servlet-name>
		<url-pattern>/blog.json</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PermalinkServlet</servlet-name>
		<url-pattern>/blog/permalink</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>NewPostServlet</servlet-name>
		<url-pattern>/blog/newpost</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SingupServlet</servlet-name>
		<url-pattern>/blog/singup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SinginServlet</servlet-name>
		<url-pattern>/blog/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SingoutServlet</servlet-name>
		<url-pattern>/blog/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>WelcomeServlet</servlet-name>
		<url-pattern>/blog/welcome</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>PermalinkFilter</filter-name>
		<filter-class>com.udacity.webdev.PermalinkFilter</filter-class>
		<init-param>
			<param-name>subPathFilter</param-name>
			<param-value>/blog/([0-9]+)</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>PermalinkFilter</filter-name>
		<url-pattern>/blog/*</url-pattern>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>frontpage.jsp</welcome-file>
	</welcome-file-list>
</web-app>
